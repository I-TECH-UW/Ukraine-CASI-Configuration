{
  "appId": "app",
  "configType": "register",
  "id": "patientRegister",
  "pageSize": 100,
  "fhirResource": {
    "baseResource": {
      "resource": "Patient"
    },
    "relatedResources": [
      {
        "id": "relatedPersons",
        "resource": "RelatedPerson",
        "searchParameter": "patient",
        "resultAsCount": true
      }
    ]
  },
  "fabActions": [
    {
      "id": "ActionButton",
      "visible": true,
      "display": "Add New Client",
      "menuIconConfig": {
        "type": "local",
        "reference": "ic_add"
      },
      "actions": [
        {
          "trigger": "ON_CLICK",
          "workflow": "LAUNCH_QUESTIONNAIRE",
          "questionnaire": {
            "id": "75",
            "title": "Add New Client",
            "saveButtonText": "Add Client"
          }
        }
      ]
    }
  ],
  "searchBar": {
    "visible": true,
    "display": "Search name or ID",
    "computedRules": [
      "patientName",
      "patientIdentifier"
    ]
  },
  "registerCard": {
    "rules": [
      {
        "name": "patientId",
        "condition": "true",
        "actions": [
          "data.put('patientId', fhirPath.extractValue(Patient, 'Patient.id'))"
        ]
      },
      {
        "name": "patientIdentifier",
        "condition": "true",
        "actions": [
          "data.put('patientIdentifier', fhirPath.extractValue(Patient, 'Patient.identifier[1].value'))"
        ]
      },
      {
        "name": "patientName",
        "condition": "true",
        "actions": [
          "data.put('patientName', fhirPath.extractValue(Patient, 'Patient.name.given') + ' ' + fhirPath.extractValue(Patient, 'Patient.name.family'))"
        ]
      },
      {
        "name": "patientGender",
        "condition": "true",
        "actions": [
          "data.put('patientGender', fhirPath.extractValue(Patient, 'Patient.gender'))"
        ]
      },
      {
        "name": "patientAge",
        "condition": "true",
        "actions": [
          "data.put('patientAge', service.extractAge(Patient))"
        ]
      },
      {
        "name": "relatedPersonsCount",
        "condition": "true",
        "actions": [
          "data.put('relatedPersonsCount', service.computeTotalCount(relatedPersons))"
        ]
      }
    ],
    "views": [
      {
        "viewType": "COLUMN",
        "children": [
          {
            "viewType": "SERVICE_CARD",
            "details": [
              {
                "viewType": "COMPOUND_TEXT",
                "primaryText": "@{patientIdentifier}",
                "primaryTextColor": "#000000"
              },
              {
                "viewType": "COMPOUND_TEXT",
                "primaryText": "@{patientGender}  @{patientAge}",
                "primaryTextColor": "#5A5A5A"
              }
            ],
            "showVerticalDivider": true,
            "serviceButton": {
              "visible": true,
              "text": "@{relatedPersonsCount} Partners",
              "status": "DUE",
              "smallSized": false
            },
            "actions": [
              {
                "trigger": "ON_CLICK",
                "workflow": "LAUNCH_PROFILE",
                "id": "clientProfile",
                "params": [
                  {
                    "key": "patientId",
                    "value": "@{patientId}"
                  },
                  {
                    "key": "patientName",
                    "value": "@{patientName}"
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  },
  "noResults": {
    "title": "No patients added",
    "message": "Sorry, you haven't added any patients to your register",
    "actionButton": {
      "id": "noResultsButton",
      "visible": true,
      "display": "Add Patient",
      "actions": [
        {
          "trigger": "ON_CLICK",
          "workflow": "LAUNCH_QUESTIONNAIRE",
          "id": "patientRegister",
          "questionnaire": {
            "id": "75",
            "title": "Add Patient",
            "saveButtonText": "Add Patient",
            "setPractitionerDetails": true,
            "setOrganizationDetails": true
          }
        }
      ]
    }
  }
}